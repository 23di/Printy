<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.printy.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/printer"
            android:layout_weight="0.2"
                      />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05" />

        <ToggleButton
            android:id="@+id/toggleGreenLed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Включить передачу"
            android:textOn="Выключить кнопку"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="0.05" />

        <ToggleButton
            android:id="@+id/toggleRedLed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Отправить файл"
            android:textOn="Выключить кнопку"
            android:textSize="15sp"
            android:layout_below="@+id/toggleGreenLed"
            android:layout_alignParentLeft="false" />

        <ToggleButton
            android:id="@+id/toggleBlueLed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Начать печать"
            android:textOn="Выключить кнопку"
            android:textSize="15sp"
            android:layout_below="@+id/toggleBlueLed"
            android:layout_alignParentLeft="false"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</FrameLayout>